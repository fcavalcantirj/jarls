{
  "name": "@jarls/server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest --selectProjects server",
    "lint": "echo \"Lint not configured\" && exit 0",
    "db:migrate": "node-pg-migrate up --migrations-dir migrations --database-url-var DATABASE_URL --decamelize",
    "db:rollback": "node-pg-migrate down --migrations-dir migrations --database-url-var DATABASE_URL --decamelize",
    "db:create-migration": "node-pg-migrate create --migrations-dir migrations --decamelize"
  },
  "dependencies": {
    "@jarls/shared": "workspace:*",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.9.2",
    "node-pg-migrate": "^8.0.4",
    "pg": "^8.17.2",
    "socket.io": "^4.8.3",
    "xstate": "5",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "nodemon": "^3.1.11",
    "socket.io-client": "^4.8.3",
    "supertest": "^7.2.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}
